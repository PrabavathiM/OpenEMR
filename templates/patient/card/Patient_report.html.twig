{% extends "patient/card/card_base.html.twig" %}

{% block content %}
  <h5 class="text-center">Doctor Custom Form</h5>

  {% if encounters is not empty %}
      {% for encounter, rows in encounters %}
          <div class="card my-3">
              <div class="card-header bg-light">
                  <strong>Encounter: {{ encounter }}</strong>
              </div>
              <div class="card-body p-0">
                  <table class="table table-bordered table-sm mb-0">
                      <thead>
                          <tr>
                              <th>Doctor Instruction</th>
                              <th>Date & Time</th>
                              <th>Health Issue</th>
                              <th>Count</th>
                          </tr>
                      </thead>
                      <tbody>
                          {% for row in rows %}
                              <tr>
                                  <td>{{ row.doctor_instruction }}</td>
                                  <td>{{ row.datetime }}</td>
                                  <td>{{ row.health_issue }}</td>
                                  <td>{{ row.count }}</td>
                              </tr>
                          {% endfor %}
                      </tbody>
                  </table>
              </div>
          </div>
      {% endfor %}
  {% else %}
      <p>No doctor custom form records found for this patient.</p>
  {% endif %}
{% endblock %}
